package assignment;
public class Day6_2 {
	public static String reverse(String l)
	{
		char[] ch=l.toCharArray();
		String t="";
		for(int i=ch.length-1;i>=0;i--)
		{
			t+=ch[i];
		}
		return t;
	}
	public static void main(String[] args) {
		String str="Hello world";
		System.out.println(reverse(str));
	}
}

