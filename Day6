package assignment;
public class Day6 {
	public static int sum(int ... x)
	{
		int c=0;
		int max=Integer.MIN_VALUE,min=Integer.MAX_VALUE,odd=0,even=0,div=0;
		for(int i=0;i<x.length;i++)
		{
			c+=x[i];
			if(max<x[i])
			{
				max=x[i];
			}
			if(min>x[i])
			{
				min=x[i];
			}
			if(x[i]%2==0)
			{
				even++;
			}
			else
			{
				odd++;
			}
			if(x[i]%3==0)
			{
				div++;
			}
		}
		System.out.println("maximum:"+max+"\n"+"minimum:"+min+"\n"+"odd positions:"+odd+"\n"+"Even positions:"+even+"\n"+"Disvisible by 3:"+div);

		return c;
	}
	public static void main(String[] args) {

		System.out.println("sum is="+sum(42,60,11,14,17,9));
	}
}

