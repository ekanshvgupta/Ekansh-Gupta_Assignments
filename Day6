package assignment;
public class Day6_3 {
	public static String revWord(String str)
	{
		int j=0;
		String res="";
		char[] ch=str.toCharArray();
		for(int i=ch.length-1;i>=0;i--)
		{
			if((ch[j]>='A' && ch[j]<='Z') && (ch[i]>='a' && ch[i]<='z'))
			{
				res+=(char)(ch[i]-32);
			}
			else if((ch[j]>='a' && ch[j]<='z') && (ch[i]>='A' && ch[i]<='Z'))
			{
				res+=(char)(ch[i]+32);
			}
			else
			{
				res+=(char)ch[i];
			}
			j++;
		}
		return res;
	}
	public static void main(String[] args) {
		String str="HeLloWorld";
		System.out.println("Reversed is="+revWord(str));
	}
}
